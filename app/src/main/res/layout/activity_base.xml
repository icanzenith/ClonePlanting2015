<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.thailandsbc.cloneplanting.baseactivity.NewsFeedFragment">

    <!-- Create Fragment Content Here-->
    <fragment
        android:id="@+id/fragment"
        android:name="org.thailandsbc.cloneplanting.baseactivity.NewsFeedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_news_feed" />


    <!-- Navigation Menu-->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#333"
        app:itemTextColor="#333"
        app:menu="@menu/navigation_drawer_items"/>

</android.support.v4.widget.DrawerLayout>


