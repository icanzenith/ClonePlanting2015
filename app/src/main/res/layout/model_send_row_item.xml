<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:contentPadding="@dimen/cardview_content_padding"
    app:cardCornerRadius="@dimen/model_cardview_default_radius"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginLeft="@dimen/cardview_content_padding"
    android:layout_marginRight="@dimen/cardview_content_padding"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="@dimen/model_order_margin_default"/>

        <TextView
            android:layout_toRightOf="@+id/textViewOrder"
            android:layout_marginLeft="@dimen/model_family_margin_left"
            android:id="@+id/textViewFamilyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A15081" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35" />
    </RelativeLayout>
</android.support.v7.widget.CardView>